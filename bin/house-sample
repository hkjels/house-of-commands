#!/usr/bin/env bash

cmd=$(basename $0)

#
# Output usage
#

usage() {
  cat << EOT

  Usage: $cmd [options]

  Options:

    -h, --help          output usage information
        --description   output short description

EOT
}

#
# Parse arguments
#

while test $# -ne 0; do
  arg=$1; shift
  case $arg in
    --description)
      echo "sample interface for a house"
      exit 0
      ;;
    -h|--help)
      usage
      exit 0
      ;;
    *)
      echo "The options of this interface are the ones required by a house."
      exit 0
      ;;
  esac
done

